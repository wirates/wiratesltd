

    <div id="content">

		<% form_for [:admin, @page],:html => { :multipart => true } do |f| %>
		
		  
		  <%- @page.errors.full_messages.each do |message| -%>
		   <div class="errorExplanation"> <p><%= message %></p></div>
		  <%- end -%>
		   
		  
		  <div id="breadcrumb">
		  	   <%= link_to "Pages", admin_pages_path %> &raquo; New
		  </div>
		 
		  <p>
		    <%= f.label :title %>
		    <%= f.text_field :title, :class => 'text' %>
		  </p>
		
		 
		  <p>
		    <%= f.label :description %>
		    <%= f.cktext_area :description,:height=>400, :width=>900 %>
		    
		  </p>
		  <p>
		    <%= f.label :meta_title %>
		    <%= f.text_field :meta_title, :class => 'text' %>
		  </p>
		  <p>
		    <%= f.label :meta_keyword %>
		    <%= f.text_field :meta_keyword, :class => 'text' %>
		  </p>
		
		  <p>
			<%= f.label :meta_description %>
		    <%= f.text_area :meta_description, :class => 'tiny_mce' %>
			
		  </p>
		  
		  <p class="button">
  	<button class="button positive" type="submit">
		 Save
	</button>
	<%= link_to "Cancel", onclick="javascript:history.back()", :class => 'button negative' %>
    
  </p>
		
		<% end %>


  </div>